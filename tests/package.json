{
  "name": "wcag-login-form-tests",
  "version": "1.0.0",
  "description": "Comprehensive test suite for WCAG 2.1 compliant login form",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "playwright test",
    "test:accessibility": "jest tests/accessibility && playwright test --grep='@accessibility'",
    "test:performance": "jest tests/performance",
    "test:cross-browser": "playwright test --project=chromium --project=firefox --project=webkit",
    "test:mobile": "playwright test --grep='@mobile'",
    "test:regression": "npm run test:accessibility && npm run test:e2e",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e && npm run test:accessibility",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint tests/**/*.js",
    "format": "prettier --write tests/**/*.js"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.40.0",
    "@axe-core/playwright": "^4.8.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "axe-core": "^4.8.2",
    "lighthouse": "^11.3.0",
    "puppeteer": "^21.5.0",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "cross-env": "^7.0.3"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/config/jest.setup.js"],
    "coverageDirectory": "tests/coverage",
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/**/*.test.{js,jsx}",
      "!src/index.js"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}