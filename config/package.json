{
  "name": "wcag-login-form",
  "version": "1.0.0",
  "description": "WCAG 2.1 AA compliant login form with comprehensive accessibility features",
  "main": "src/components/LoginForm.html",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "accessibility:audit": "axe-core src/components/LoginForm.html",
    "accessibility:lighthouse": "lighthouse --chrome-flags='--headless' --only-categories=accessibility src/components/LoginForm.html",
    "validate:html": "html-validate src/components/LoginForm.html",
    "validate:css": "stylelint src/styles/*.css",
    "lint:js": "eslint src/utils/*.js",
    "serve": "http-server src/components -p 8080 -o",
    "build": "npm run validate:html && npm run validate:css && npm run lint:js && npm run test",
    "ci": "npm run build && npm run accessibility:audit"
  },
  "keywords": [
    "accessibility",
    "wcag",
    "a11y",
    "login",
    "form",
    "aria",
    "semantic-html",
    "screen-reader",
    "keyboard-navigation"
  ],
  "author": "WCAG Accessibility Team",
  "license": "MIT",
  "devDependencies": {
    "@axe-core/cli": "^4.8.0",
    "eslint": "^8.50.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-accessibility": "^5.0.0",
    "html-validate": "^8.5.0",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "jest-axe": "^8.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^22.1.0",
    "lighthouse": "^11.0.0",
    "stylelint": "^15.10.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-a11y": "^1.2.3"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/src/tests/setup.js"],
    "collectCoverageFrom": [
      "src/utils/*.js",
      "!src/tests/**",
      "!node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/organization/wcag-login-form.git"
  },
  "bugs": {
    "url": "https://github.com/organization/wcag-login-form/issues"
  },
  "homepage": "https://organization.github.io/wcag-login-form"
}