{
  "name": "pricing-table-qa-suite",
  "version": "1.0.0",
  "description": "Comprehensive QA testing suite for responsive pricing table",
  "scripts": {
    "test": "node run-qa-suite.js",
    "test:visual": "jest ../tests/pricing-table.visual-regression.test.js",
    "test:a11y": "jest ../tests/pricing-table.accessibility.test.js",
    "test:cross-browser": "jest ../tests/pricing-table.cross-browser.test.js",
    "test:mobile": "jest ../tests/pricing-table.mobile-interactions.test.js",
    "test:performance": "jest ../tests/pricing-table.performance.test.js",
    "test:ci": "node run-qa-suite.js --ci",
    "report": "open ../test-results/qa-report.html"
  },
  "dependencies": {
    "playwright": "^1.40.0",
    "axe-playwright": "^1.2.3",
    "pixelmatch": "^5.3.0",
    "pngjs": "^7.0.0",
    "lighthouse": "^11.0.0",
    "chrome-launcher": "^0.15.2"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "@playwright/test": "^1.40.0",
    "jest-playwright-preset": "^4.0.0"
  },
  "jest": {
    "preset": "jest-playwright-preset",
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "jest-playwright-preset"
    ],
    "testTimeout": 30000
  }
}